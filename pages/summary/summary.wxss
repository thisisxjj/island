.container {
  width: 100%;
  overflow-y: hidden;
  overflow-x: hidden;
}
.bgImage {
  position:absolute;
  left:0;
  top:0;
  height:100%;
  width:100%;
}
.content-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: rgba(180,180,180,0.6);
}

.summary-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
}
.text {
  padding: 40rpx;
  font-size: 36rpx;
  color: white;
}
.line{
  width:100%;
  height:1px;
  background: linear-gradient( 
  to right, 
  rgba(255,255,255,0) 0%, 
  rgba(255,255,255,0.1) 10%, 
  rgba(255,255,255,0.2) 20%, 
  rgba(255,255,255,0.3) 30%, 
  rgba(255,255,255,0.4) 40%, 
  rgba(255,255,255,0.6) 50%,
  rgba(255,255,255,0.4) 60%, 
  rgba(255,255,255,0.3) 70%, 
  rgba(255,255,255,0.2) 80%, 
  rgba(255,255,255,0.1) 90%,
  rgba(255,255,255,0.0) 100%)
} 
.tags-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 30rpx;
  color: white;
  font-size: 26rpx;
}

.description {
  margin: 0 30rpx;
  font-size: 26rpx;
  color: white;
}