.container {
  display: flex;
  width: 100%;
  height: 200rpx;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 40rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.right-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-left: 20rpx;
  justify-content: space-around;
  margin-top: -20rpx;
}

.text {
  font-weight: 200;
  font-size: 24rpx;
  line-height: 24rpx;
}

